    - Danish (.dk)
    - Estonia (.ee)
    - Greek (.el)
    - Spanish (.es)
    - Estonian (.et)
    - French (.fr)
    - Hebrew (.he.iso8859-8)
    - Italian (.it)
    - Japanese (.ja.iso2022-jp, .ja.jis)
    - Korean (.kr.iso2022-kr, .kt.iso-kr)
    - ? (.ltz)
    - ? (.lu)
    - Dutch (.nl)
